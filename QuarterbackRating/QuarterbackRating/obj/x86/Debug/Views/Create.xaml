<Page
    x:Class="QuarterbackRating.Views.Create"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:QuarterbackRating.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Background="#FF303030">
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="5"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="5"/>
            <RowDefinition Height="100" />
        </Grid.RowDefinitions>

        <Rectangle Grid.Row="0" Fill="#4F2683"/>
        <TextBlock x:ConnectionId='2' Grid.Row="0" 
                   Name="Header"
                   FontSize="24"
                   Foreground="#FFC62F"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   FontWeight="Bold"
                   Text="Quarterback Rating"
        />

        <Rectangle Grid.Row="1" Fill="#FFC62F"/>

        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock x:ConnectionId='5'
                   Name="Current"
                   FontSize="20"
                   Foreground="#FFC62F"
                   HorizontalAlignment="Center"
                   FontWeight="Bold"
                   Margin="0,20,0,0"
                   Text="Quarterback Details"
            />

            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Row="0"
                           FontSize="16"
                           Foreground="White"
                           HorizontalAlignment="right"
                           VerticalAlignment="Center"
                           FontWeight="Bold"
                           Margin="0,20,5,0"
                           Text="Name:"/>
                <TextBlock Grid.Row="1"
                           FontSize="16"
                           Foreground="White"
                           HorizontalAlignment="right"
                           VerticalAlignment="Center"
                           FontWeight="Bold"
                           Margin="0,20,5,0"
                           Text="Pass Attempts:"/>
                <TextBlock Grid.Row="2"
                           FontSize="16"
                           Foreground="White"
                           HorizontalAlignment="right"
                           VerticalAlignment="Center"
                           FontWeight="Bold"
                           Margin="0,20,5,0"
                           Text="Pass Completions:"/>
                <TextBlock Grid.Row="3"
                           FontSize="16"
                           Foreground="White"
                           HorizontalAlignment="right"
                           VerticalAlignment="Center"
                           FontWeight="Bold"
                           Margin="0,20,5,0"
                           Text="Passing Yards:"/>
                <TextBlock Grid.Row="4"
                           FontSize="16"
                           Foreground="White"
                           HorizontalAlignment="right"
                           VerticalAlignment="Center"
                           FontWeight="Bold"
                           Margin="0,20,5,0"
                           Text="Touchdowns:"/>
                <TextBlock Grid.Row="5"
                           FontSize="16"
                           Foreground="White"
                           HorizontalAlignment="right"
                           VerticalAlignment="Center"
                           FontWeight="Bold"
                           Margin="0,20,5,0"
                           Text="Interceptions:"/>

                <TextBox x:ConnectionId='6' Grid.Column="1"
                         Name="Name"
                         FontSize="16"
                         Foreground="White"
                         HorizontalAlignment="left"
                         VerticalAlignment="Center"
                         Text="TextBox" 
                         TextWrapping="Wrap" 
                         MinWidth="100"
                         MaxWidth="1000"
                         Margin="5,20,0,0"/>
                <TextBox x:ConnectionId='7' Grid.Column="1" Grid.Row="1"
                         Name="PassAttempts"
                         FontSize="16"
                         Foreground="White"
                         HorizontalAlignment="left"
                         VerticalAlignment="Center"
                         Text="TextBox" 
                         TextWrapping="Wrap" 
                         MinWidth="100"
                         MaxWidth="1000"
                         Margin="5,20,0,0"/>
                <TextBox x:ConnectionId='8' Grid.Row="2" Grid.Column="2"
                         Name="PassCompletions"
                         FontSize="16"
                         Foreground="White"
                         HorizontalAlignment="left"
                         VerticalAlignment="Center"
                         Text="TextBox" 
                         TextWrapping="Wrap" 
                         MinWidth="100"
                         MaxWidth="1000"
                         Margin="5,20,0,0"/>
                <TextBox x:ConnectionId='9' Grid.Row="3" Grid.Column="3"
                         Name="PassingYards"
                         FontSize="16"
                         Foreground="White"
                         HorizontalAlignment="left"
                         VerticalAlignment="Center"
                         Text="TextBox" 
                         TextWrapping="Wrap" 
                         MinWidth="100"
                         MaxWidth="1000"
                         Margin="5,20,0,0"/>
                <TextBox x:ConnectionId='10' Grid.Row="4" Grid.Column="4"
                         Name="Touchdowns"
                         FontSize="16"
                         Foreground="White"
                         HorizontalAlignment="left"
                         VerticalAlignment="Center"
                         Text="TextBox" 
                         TextWrapping="Wrap" 
                         MinWidth="100"
                         MaxWidth="1000"
                         Margin="5,20,0,0" />
                <TextBox x:ConnectionId='11' Grid.Row="5" Grid.Column="5"
                         Name="Interceptions"
                         FontSize="16"
                         Foreground="White"
                         HorizontalAlignment="left"
                         VerticalAlignment="Center"
                         Text="TextBox" 
                         TextWrapping="Wrap" 
                         MinWidth="100"
                         MaxWidth="1000"
                         Margin="5,20,0,0"/>
            </Grid>
        </Grid>

        <Rectangle Grid.Row="3" Fill="#FFC62F"/>

        <Grid Grid.Row="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button x:ConnectionId='3'
                Name="CreateSave"
                FontSize="24"
                Foreground="white"
                Background="Green"
                VerticalAlignment="Stretch"
                HorizontalAlignment="Stretch"
                FontWeight="Bold"
                                        
                >Save
            </Button>
            <Button x:ConnectionId='4' Grid.Column="1"
                Name="CreateCancel"
                FontSize="24"
                Foreground="white"
                Background="Blue"
                VerticalAlignment="Stretch"
                HorizontalAlignment="Stretch"
                FontWeight="Bold"
                                          
                >Back
            </Button>
        </Grid>

    </Grid>
</Page>

