<Page
    x:Class="QuarterbackRating.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:QuarterbackRating"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:data="using:QuarterbackRating.Models"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="100" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" 
                   Name="Header"
                   FontSize="24"
                   Foreground="Red"
                   FontWeight="Bold"
                   Text="QuarterBack Rating"/>
        
        <GridView Grid.Row="1" ItemsSource="{x:Bind Quarterbacks}" IsItemClickEnabled="True" ItemClick="GridView_ItemClick">
            <GridView.ItemTemplate>
                <DataTemplate x:DataType="data:Quarterback">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                        <StackPanel Margin="20,20,0,0">
                            <TextBlock FontSize="16" Text="{x:Bind Name}" HorizontalAlignment="Left"/>
                            <TextBlock FontSize="10" Text="{x:Bind Rating}" HorizontalAlignment="left"/>
                        </StackPanel>
                    </StackPanel>
                </DataTemplate>
            </GridView.ItemTemplate>
        </GridView>
        
        <TextBlock Grid.Row="2" 
                   Name="ResultTextBlock"
                   FontSize="24"
                   Foreground="Red"
                   FontWeight="Bold"/>
    </Grid>
</Page>
