<Page x:ConnectionId='1'
    x:Class="QuarterbackRating.Views.Details"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:QuarterbackRating.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:data="using:QuarterbackRating.Models"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Background="#FF303030">
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="5"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="5"/>
            <RowDefinition Height="100" />
        </Grid.RowDefinitions>

        <Rectangle Grid.Row="0" Fill="#4F2683"/>
        <TextBlock x:ConnectionId='2' Grid.Row="0" 
                   Name="Header"
                   FontSize="24"
                   Foreground="#FFC62F"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   FontWeight="Bold"
                   Text="Quarterback Rating"
        />

        <Rectangle Grid.Row="1" Fill="#FFC62F"/>

        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock x:ConnectionId='4'
                   Name="Current"
                   FontSize="20"
                   Foreground="#FFC62F"
                   HorizontalAlignment="Center"
                   FontWeight="Bold"
                   Margin="0,20,0,0"
                   Text="Quarterback Details"
            />

            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock
                   FontSize="16"
                   Foreground="White"
                   HorizontalAlignment="right"
                   FontWeight="Bold"
                   Margin="0,20,5,0"
                   Text="Name:"
                />
                <TextBlock Grid.Row="1"
                   FontSize="16"
                   Foreground="White"
                   HorizontalAlignment="right"
                   FontWeight="Bold"
                   Margin="0,20,5,0"
                   Text="Rating:"
                />
                <TextBlock Grid.Row="2"
                   FontSize="16"
                   Foreground="White"
                   HorizontalAlignment="right"
                   FontWeight="Bold"
                   Margin="0,20,5,0"
                   Text="Passes Attempted:"
                />
                <TextBlock Grid.Row="3"
                   FontSize="16"
                   Foreground="White"
                   HorizontalAlignment="right"
                   FontWeight="Bold"
                   Margin="0,20,5,0"
                   Text="Passes Completed:"
                />
                <TextBlock Grid.Row="4"
                   FontSize="16"
                   Foreground="White"
                   HorizontalAlignment="right"
                   FontWeight="Bold"
                   Margin="0,20,5,0"
                   Text="Passing Yards:"
                />
                <TextBlock Grid.Row="5"
                   FontSize="16"
                   Foreground="White"
                   HorizontalAlignment="right"
                   FontWeight="Bold"
                   Margin="0,20,5,0"
                   Text="Touchdowns:"
                />
                <TextBlock Grid.Row="6"
                   FontSize="16"
                   Foreground="White"
                   HorizontalAlignment="right"
                   FontWeight="Bold"
                   Margin="0,20,5,0"
                   Text="Interceptions:"
                />

                <ListView x:ConnectionId='5'                                   >
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Grid.Row="2" Grid.Column="2" Text="xx"/>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
                <TextBlock Grid.Column="1"
                FontSize="16"
                Foreground="White"
                HorizontalAlignment="left"
                Margin="5,20,0,0"
                Text=""
                />
                <TextBlock Grid.Column="1" Grid.Row="1" 
                FontSize="16"
                Foreground="White"
                HorizontalAlignment="left"
                Margin="5,20,0,0"
                Text=""
                />
                <TextBlock Grid.Row="2" Grid.Column="2"
                FontSize="16"
                Foreground="White"
                HorizontalAlignment="left"
                Margin="5,20,0,0"
                Text=""
                />
                <TextBlock Grid.Row="3" Grid.Column="3"
                FontSize="16"
                Foreground="White"
                HorizontalAlignment="left"
                Margin="5,20,0,0"
                Text=""
                />
                <TextBlock Grid.Row="4" Grid.Column="4"
                FontSize="16"
                Foreground="White"
                HorizontalAlignment="left"
                Margin="5,20,0,0"
                Text=""
                />
                <TextBlock Grid.Row="5" Grid.Column="5"
                FontSize="16"
                Foreground="White"
                HorizontalAlignment="left"
                Margin="5,20,0,0"
                Text=""
                />
                <TextBlock Grid.Row="6" Grid.Column="6"
                FontSize="16"
                Foreground="White"
                HorizontalAlignment="left"
                Margin="5,20,0,0"
                Text=""
                />
            </Grid>
        </Grid>

        <Rectangle Grid.Row="3" Fill="#FFC62F"/>

        <Button x:ConnectionId='3' Grid.Row="4"
                Name="DetailsBack"
                FontSize="24"
                Foreground="#FFC62F"
                Background="#4F2683"
                VerticalAlignment="Stretch"
                HorizontalAlignment="Stretch"
                FontWeight="Bold"
                                         >Back
        </Button>

    </Grid>
</Page>

